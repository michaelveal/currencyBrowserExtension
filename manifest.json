{
    "manifest_version": 2,
    "name": "Currency Converter",
    "description": "Convert currencies directly from your browser.",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "https://api.exchangerate-api.com/"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "128": "icon128.png"
    }
}
